<html>
	<head>
		<title>Sign Up</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<noscript>
			<link rel="stylesheet" href="/stylesheets/css/skel.css" />
			<link rel="stylesheet" href="/stylesheets/css/style.css" />
			<link rel="stylesheet" href="/stylesheets/css/style-wide.css" />
		</noscript>
		<!--[if lte IE 8]><link rel="stylesheet" href="/stylesheets/css/ie/v8.css" /><![endif]-->
	</head>
	<body>

		<!-- Header -->
			<header id="header" class="skel-layers-fixed">
				<nav id="nav">
					<ul>
						<li><a href="/">Home</a></li>
						<li>
						<a href="#" id='logger' class="icon fa-angle-down">Login In</a>
						<ul id='signIn'>
							<li>
							<form id='logIn' method='post' action='/login'>
								<div class="12u">
									<input type="text" name="name" id="name" value="" required="" placeholder="User Name" />
								</div>
								<div class="12u">
									<input type="password" name="password" id="password" value="" required="" placeholder="password" />
								</div>
								<input type='submit' id='submit' value='Sign In' />
							</form>
								</li>
							</ul>
						</li>
						<li><a href="/signUp" class="button">Sign Up</a></li>
					</ul>
				</nav>
			</header>

		<!-- Main -->
			<section id="main" class="container 75%">
				<header>
					<h2>Login</h2>
				</header>
				<% if (error.length > 0) { %>
					<div class='alert alert-danger'><%= error %></div>
				<% } %>
				<div class="box" id="login" style='width: 500px; margin-left: auto; margin-right: auto; background: #aaa'>
					<form method="post" action="/login">
						<div class="row uniform 50%">
							<div class="12u">
								<input type="text" name="username" id="name" value="" required="" placeholder="User Name" />
							</div>
						</div>
						<div class="row uniform 50%">
							<div class="12u">
								<input type="password" name="password" id="password1" value="" required="" placeholder="password" />
							</div>
						</div>
						<div class="row uniform">
							<div class="12u">
								<ul class="actions align-center">
									<li><input type="submit" value="Login" /></li>
								</ul>
							</div>
						</div>
					</form>
				</div>
			</section>

		<!-- Footer -->
			<footer id="footer">
				<ul class="icons">
					<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
					<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
					<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
					<li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
					<li><a href="#" class="icon fa-google-plus"><span class="label">Google+</span></a></li>
				</ul>
				<ul class="copyright">
					<li>&copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
				</ul>
			</footer>
			<!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
			<script src="/javascripts/js/jquery.min.js"></script>
			<script src="/javascripts/js/jquery.dropotron.min.js"></script>
			<script src="/javascripts/js/jquery.scrollgress.min.js"></script>
			<script src="/javascripts/js/skel.min.js"></script>
			<script src="/javascripts/js/skel-layers.min.js"></script>
			<script src="/javascripts/js/init.js"></script>
			<script src="/javascripts/js/form.js"></script>
	</body>
</html>
