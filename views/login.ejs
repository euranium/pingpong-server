<% include header.ejs %>

		<!-- Main -->
			<section id="main" class="container 75%">
				<header>
					<h2>Login</h2>
				</header>
				<% if (error.length > 0) { %>
					<div class='alert alert-danger'><%= error %></div>
				<% } %>
				<div class="box" id="login" >
					<form method="post" action="/login">
						<div class="row uniform 50%">
							<div class="12u">
								<input type="text" name="username" id="name" value="" required="" placeholder="User Name" />
							</div>
						</div>
						<div class="row uniform 50%">
							<div class="12u">
								<input type="password" name="password" id="password1" value="" required="" placeholder="password" />
							</div>
						</div>
						<div class="row uniform">
							<div class="12u">
								<ul class="actions align-center">
									<li><input type="submit" value="Login" /></li>
								</ul>
							</div>
						</div>
					</form>
				</div>
			</section>

		<!-- Footer -->
<% include footer.ejs %>
