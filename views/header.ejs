	<body>

		<!-- Header -->
			<header id="header" class="skel-layers-fixed">
				<nav id="nav">
					<ul>
						<li><a href="/">Home</a></li>
						<li>
						<% if (user === false) { %>
						<a href="#" id='logger' class="icon fa-angle-down">Login In</a>
						<ul id='signIn'>
							<li>
								<form id='logIn' method='post' action='/login'>
									<div class="12u">
										<input type="text" name="username" id="name" value="" required="" placeholder="User Name" />
									</div>
									<div class="12u">
										<input type="password" name="password" id="password" value="" required="" placeholder="password" />
									</div>
									<input type='submit' id='submit' value='Sign In' />
								</form>
							</li>
						</ul>
						</li>
						<li><a href="/signUp" class="button">Sign Up</a></li>
						<% } else { %>
						<li><a href="games" id='games' class="icon fa-angle-down">Games</a></li>
						<ul id='select'>
							<li><a href='/games/find'>Find a game</a></li>
							<li><a href='/games/log'>Log a game</a></li>
						</ul>
						<li><a href="/profile"><%= user %></a></li>
						<li><a href="/logout">Logout</a></li>
						<% } %>
					</ul>
				</nav>
			</header>
